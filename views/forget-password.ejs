<!-- show forget-pass page -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password - Network Project</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --dark-bg: #0a0a0a;
            --dark-surface: #1a1a1a;
            --dark-text: #e0e0e0;
            --accent-color: #4a90e2;
            --accent-hover: #357abd;
            --border-dark: rgba(255,255,255,0.1);
        }

        body {
            background: var(--dark-bg);
            color: var(--dark-text);
            min-height: 100vh;
            font-family: 'Inter', sans-serif;
        }

        .forgot-password-container {
            background: var(--dark-surface);
            border: 1px solid var(--border-dark);
            border-radius: 12px;
            padding: 2rem;
            max-width: 400px;
            margin: 2rem auto;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .form-control {
            background: rgba(255,255,255,0.05);
            border: 1px solid var(--border-dark);
            color: var(--dark-text);
            padding: 0.75rem;
        }

        .form-control:focus {
            background: rgba(255,255,255,0.1);
            border-color: var(--accent-color);
            color: var(--dark-text);
            box-shadow: 0 0 0 2px rgba(74, 144, 226, 0.25);
        }

        .btn-primary {
            background: var(--accent-color);
            border: none;
            padding: 0.75rem 1.5rem;
            font-weight: 500;
            transition: all 0.2s ease;
            width: 100%;
        }

        .btn-primary:hover {
            background: var(--accent-hover);
            transform: translateY(-2px);
        }

        .error-message {
            color: #ff4d4d;
            background: rgba(255,77,77,0.1);
            border: 1px solid rgba(255,77,77,0.2);
            border-radius: 6px;
            padding: 0.75rem;
            margin-bottom: 1rem;
        }

        .success-message {
            color: #4caf50;
            background: rgba(76,175,80,0.1);
            border: 1px solid rgba(76,175,80,0.2);
            border-radius: 6px;
            padding: 0.75rem;
            margin-bottom: 1rem;
        }

        .auth-links {
            text-align: center;
            margin-top: 1.5rem;
        }

        .auth-links a {
            color: var(--accent-color);
            text-decoration: none;
            transition: color 0.2s ease;
        }

        .auth-links a:hover {
            color: var(--accent-hover);
        }

        .info-text {
            color: rgba(224,224,224,0.7);
            font-size: 0.9rem;
            margin-bottom: 1.5rem;
            text-align: center;
        }
    </style>
</head>
<body>
    <br>
    <br>
    <br>
    <br>
    <br>
    <div class="container">
        <div class="forgot-password-container">
            <h2 class="text-center mb-3">Password Recovery</h2>
            <p class="info-text">Enter your email address and we'll send you instructions to reset your password.</p>
            
            <% if (locals.errorMessage) { %>
                <div class="error-message">
                    <%= errorMessage %>
                </div>
            <% } %>

            <% if (locals.successMessage) { %>
                <div class="success-message">
                    <%= successMessage %>
                </div>
            <% } %>

            <form action="/auth/forget-password" method="POST">
                <div class="mb-4">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" 
                           class="form-control" 
                           id="email" 
                           name="email" 
                           required
                           placeholder="Enter your registered email">
                </div>

                <button type="submit" class="btn btn-primary">Send Reset Instructions</button>
                
                <div class="auth-links">
                    <a href="/auth/login">Back to Login</a>
                    <span class="mx-2">|</span>
                    <a href="/auth/register">Create Account</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>